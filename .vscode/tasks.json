{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build C++ file",
      "type": "process",
      "group": { "kind": "build", "isDefault": true },
      "command": "clang++",
      "args": [
        "-std=c++17",
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "--debug",
        "${file}",
        "--output",
        "${workspaceFolder}/build/${fileBasenameNoExtension}"
      ],
      "windows": {
        "command": "C:/Program Files/Microsoft Visual Studio/2022/Community/VC/Tools/Llvm/x64/bin/clang++.exe",
        "args": [
          "-std=c++17",
          "-fcolor-diagnostics",
          "-fansi-escape-codes",
          "--debug",
          "${file}",
          "--output",
          "${workspaceFolder}/build/${fileBasenameNoExtension}.exe"
        ]
      }
    },
    {
      "label": "Run C++ file",
      "type": "shell",
      "group": { "kind": "test", "isDefault": true },
      "dependsOn": ["Build C++ file"],
      "command": "${workspaceFolder}/build/${fileBasenameNoExtension}",
      "windows": {
        "command": "${workspaceFolder}/build/${fileBasenameNoExtension}.exe"
      }
    }
  ]
}
