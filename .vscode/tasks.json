{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build C++ file (Unix)",
      "type": "process",
      "group": "build",
      "command": "clang++",
      "args": [
        "-std=c++17",
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "-g",
        "${file}",
        "-o",
        "${workspaceFolder}/build/${fileBasenameNoExtension}"
      ]
    },
    {
      "label": "Run C++ file (Unix)",
      "type": "shell",
      "group": "test",
      "command": "${workspaceFolder}/build/${fileBasenameNoExtension}",
      "dependsOn": ["Build C++ file (Unix)"]
    },
    {
      "label": "Build C++ file (Windows)",
      "type": "process",
      "group": "build",
      "command": "C:/Program Files/Microsoft Visual Studio/2022/Community/VC/Tools/Llvm/x64/bin/clang++.exe",
      "args": [
        "-std=c++17",
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "-g",
        "${file}",
        "-o",
        "${workspaceFolder}/build/${fileBasenameNoExtension}.exe"
      ]
    },
    {
      "label": "Run C++ file (Windows)",
      "type": "shell",
      "group": "test",
      "command": "${workspaceFolder}/build/${fileBasenameNoExtension}.exe",
      "dependsOn": ["Build C++ file (Windows)"]
    }
  ]
}
